<launch>

	<!-- Launch ASUS sensor #1 - this is used for arm positioning -->
	<include file="$(find openni2_launch)/launch/openni2.launch">
		<arg name="depth_registration" value="true"/>
		<arg name="camera" value="camera"/>
		<arg name="device_id" value="#1"/>
		<arg name="auto_white_balance" value="false"/>
	</include>
	
	<!-- Launch ASUS sensor #2 - this is used as a proxy for Laser scanner -->
	<include file="$(find openni2_launch)/launch/openni2.launch">
		<arg name="depth_registration" value="true"/>
		<arg name="camera" value="camera_base"/>
		<arg name="device_id" value="2@2"/>
	</include>

</launch>

